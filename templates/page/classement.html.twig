{% extends 'default/layout.html.twig' %}

{% block content %}

  
    <tr>
      <div class="py-5">
    <div class="container">
      <div class="row align-items-center" style="">
        <div class="col-md-4 border-dark rounded-top rounded-left border bg-info" style=""><p class="text-center my-0"><i class="fa d-inline Example of trophy fa-trophy fa-2x"> </i> Rang</p>  </div>
        <div class="col-md-4 border-dark rounded-top border bg-info"> <p class="text-center my-0"> <i class="fa d-inline Example of trophy fa-2x fa-user" > </i> Pseudo </p> </div>
        <div class="col-md-4 border-dark rounded-top border bg-info"> <p class="text-center my-0"> <i class="fa d-inline Example of trophy fa-2x fa-heart"></i> Score </p> </div>
        
      </div>
      <div class="row  border rounded-left rounded-right rounded-bottom border-warning">
      {% set rang = 1 %}
         {% for Utilisateur in ListeUtilisateur %}
        <div class="col-md-4 border-warning border  text-light text-center " style="	background-image: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5));	background-position: top left;	background-size: 100%;	background-repeat: repeat;"> {{ rang }}</div>
        <div class="col-md-4 border-warning border  text-light text-center " style="	background-image: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5));	background-position: top left;	background-size: 100%;	background-repeat: repeat;">{{ Utilisateur.Pseudo }}</div>
        <div class="col-md-4 border-warning border  text-light text-center " style="	background-image: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5));	background-position: top left;	background-size: 100%;	background-repeat: repeat;"> {{ Utilisateur.score }}</div>
      {% set rang = rang + 1 %}
          {% endfor %}
      </div>
    </div>
  </div>


{% endblock %}